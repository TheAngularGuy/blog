<script>
  function listenAndToggleNav() {
    const toggleBtn = document.getElementById('toggle-nav-btn');
    const header = document.getElementById('header');

    if (toggleBtn && header) {
      toggleBtn.addEventListener('click', () => {
        header.classList.toggle('opened');
      });
    }
  }

  (() => {
    listenAndToggleNav();
  })()
</script>
